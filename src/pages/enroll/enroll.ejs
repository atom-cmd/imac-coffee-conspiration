<%= require('../../core/parts/header.ejs')({title: 'Enroll'}) %>
    <div class="carte">
        <div class="photo">
            <img src="<%= htmlWebpackPlugin.options.assetsUrl %>/images/blob.jpeg">
        </div>
        <div class="infos">
            <h2 id="agent">Agent</h2>
            <h1 id="titre">Anti-Coffee Society</h1>
            <h3 class="label-badge">First Name: <span id="badge-fname">First Name</span></h3>
            <h3 class="label-badge">Last Name: <span id="badge-lname">Last Name</span></h3>
            <h3 class="label-badge">Birth date: <span id="badge-bdate">Birth date</span></h3>
