    <div class="form">
        <h1 id="form" onclick="updateCaption()">Agent submission form</h1>
        <form>
            <h4 class="label-form">First Name: </h4><input type="text" name="fname" onchange="updateText()" onkeyup="updateText()">
            <h4 class="label-form">Last Name:</h4><input type="text" name="lname" onchange="updateText()" onkeyup="updateText()">
            <h4 class="label-form">Birth date: </h4><input type="date" name="date" onchange="updateText()" onkeyup="updateText()">
            <input type="submit" id="flanquer" value="Flanquer">
        </form>
    </div>
